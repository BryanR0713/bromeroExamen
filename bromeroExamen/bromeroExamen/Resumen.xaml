<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bromeroExamen.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Resumen" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label x:Name="txtUsuario" FontSize="20" HorizontalTextAlignment="Center"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Nombre" FontSize="20" Grid.Row="0" Grid.Column="0"/>
                <Label x:Name="txtNombre" FontSize="20" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Pago Mensual" FontSize="20"  Grid.Row="1" Grid.Column="0"/>
                <Label x:Name="txtPagoMensual" FontSize="20" Grid.Row="1" Grid.Column="1" />

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>